{
  "private": true,
  "version": "1.3.2",
  "scripts": {
    "build": "./node_modules/.bin/gulp",
    "watch": "./node_modules/.bin/gulp watch",
    "serve": "port=$(shuf -i 2000-65000 -n 1); echo serving on: :$port; ./node_modules/.bin/serve -Sn -p $port dist &   ./node_modules/.bin/lt -p $port -s $(whoami)$(basename $PWD | sed 's/[^a-z^0-9]*//g')",
    "dev": "npm run build; npm run serve & npm run watch",
    "test": "./node_modules/.bin/gulp test",
    "deploy-gh-pages": "if [ ! -d './dist/.git' ]; then git -C dist init; git -C dist checkout -B gh-pages; git -C dist remote add origin $(git config --get remote.origin.url); fi; git -C dist add --all .; git -C dist commit -q --allow-empty-message -m ''; git -C dist push origin HEAD",
    "deploy": "npm run build && npm run deploy-gh-pages"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "6.x",
    "babel-eslint": "7.x",
    "babel-plugin-external-helpers": "6.x",
    "babel-plugin-transform-commonjs-es2015-modules": "3.x",
    "babel-preset-env": "1.x",
    "babel-preset-stage-2": "6.x",
    "child-process-promise": "2.x",
    "eslint": "4.x",
    "eslint-config-standard": "10.x",
    "eslint-plugin-html": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-node": "5.x",
    "eslint-plugin-promise": "3.x",
    "eslint-plugin-standard": "3.x",
    "gulp": "3.x",
    "gulp-babel": "7.x",
    "gulp-better-rollup": "1.x",
    "gulp-postcss": "7.x",
    "gulp-pug": "3.x",
    "gulp-rename": "1.x",
    "gulp-sourcemaps": "2.x",
    "gulp-watch": "4.x",
    "localtunnel": "1.x",
    "postcss": "6.x",
    "postcss-color-function": "4.x",
    "postcss-cssnext": "3.x",
    "postcss-font-magician": "2.x",
    "postcss-mixins": "6.x",
    "postcss-nested": "2.x",
    "postcss-nested-props": "1.x",
    "pulp": "12.x",
    "ramda": "0.x",
    "rollup": "0.x",
    "rollup-plugin-babel": "3.x",
    "rollup-plugin-commonjs": "8.x",
    "rollup-plugin-node-resolve": "3.x",
    "rollup-plugin-pug": "0.x",
    "rollup-plugin-purs": "1.x",
    "serve": "6.x",
